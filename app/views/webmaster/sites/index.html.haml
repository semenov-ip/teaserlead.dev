- model_class = Site
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize(:ru).titleize
%table{width: "100%"}
  %thead
    %tr
      %th= model_class.human_attribute_name(:category_id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:url)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @sites.each do |site|
      %tr
        %td= site.category_id
        %td= site.title
        %td= site.url
        %td= site.description
        %td=l site.created_at
        %td
          = link_to t('.show', :default => t("helpers.links.show")), webmaster_site_path(site), :class => 'button small'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_webmaster_site_path(site), :class => 'button small'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), webmaster_site_path(site), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'button small alert'

= link_to t('.new', :default => t("helpers.links.new")), new_webmaster_site_path, :class => 'button '
