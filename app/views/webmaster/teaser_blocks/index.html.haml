- model_class = TeaserBlock
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize(:ru).titleize
.small-12.columns
  %table{width: "100%"}
    %thead
      %tr
        %th= model_class.human_attribute_name(:id)
        %th= model_class.human_attribute_name(:topic)
        %th= model_class.human_attribute_name(:site)
        %th=t '.actions', :default => t("helpers.actions")
    %tbody
      - @teaser_blocks.each do |teaser_block|
        %tr
          %td= link_to teaser_block.id, teaser_block_path(teaser_block)
          %td= teaser_block.topic
          %td= teaser_block.site.title
          %td
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_webmaster_teaser_block_path(teaser_block), :class => 'button small'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), webmaster_teaser_block_path(teaser_block), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'button small alert'

= link_to t('.new', :default => t("helpers.links.new")), new_webmaster_teaser_block_path, :class => 'button '
