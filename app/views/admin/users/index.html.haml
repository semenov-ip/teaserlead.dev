.row
  - model_class = User
  .page-header
    %h1=t '.title', :default => model_class.model_name.human.pluralize(:ru).titleize
  %table.table.table-striped
    %thead
      %tr
        %th= model_class.human_attribute_name(:id)
        %th= model_class.human_attribute_name(:email)
        %th= model_class.human_attribute_name(:roles)
        %th=t '.actions', :default => t("helpers.actions")
    %tbody
      - @users.each do |item|
        %tr
          %td= link_to item.id, admin_user_path(item)
          %td= item.email
          %td= item.roles
          %td
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_user_path(item), :class => 'button small'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_user_path(item), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'button small alert'

  = link_to t('.new', :default => t("helpers.links.new")), new_admin_user_path, :class => 'button small'
