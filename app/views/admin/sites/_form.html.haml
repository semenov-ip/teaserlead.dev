= simple_form_for [:admin, @site], :html => { :class => 'form-horizontal' } do |f|
  = f.input :category_id, collection: Category.ancestry_options
  = f.input :title
  = f.input :url
  = f.input :description
  .form-actions
    = f.button :submit, :class => 'small'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_sites_path, :class => 'button small secondary'
