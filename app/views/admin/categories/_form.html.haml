= simple_form_for [:admin, @category], :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :parent_id, collection: Category.ancestry_options
  .form-actions
    = f.button :submit, :class => 'small'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), categories_path, :class => 'button small secondary'
