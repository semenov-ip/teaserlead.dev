- model_class = Category
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @category.name
%p
  %strong= model_class.human_attribute_name(:ancestry) + ':'
  %br
  = @category.ancestry

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_categories_path, :class => 'button small secondary'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_category_path(@category), :class => 'button small secondary'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_category_path(@category), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'button small alert'
