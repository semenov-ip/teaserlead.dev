- model_class = AdvertisementCampaign
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:category_id) + ':'
  %br
  = @advertisement_campaign.category.name if @advertisement_campaign.category.present?
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @advertisement_campaign.name
%p
  %strong= model_class.human_attribute_name(:url) + ':'
  %br
  = @advertisement_campaign.url

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_advertisement_campaigns_path, :class => 'button small secondary'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_advertisement_campaign_path(@advertisement_campaign), :class => 'button small secondary'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_advertisement_campaign_path(@advertisement_campaign), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'button small alert'
