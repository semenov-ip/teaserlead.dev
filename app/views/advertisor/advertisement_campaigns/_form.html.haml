= simple_form_for [:advertisor, @advertisement_campaign], :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :url
  = f.input :category_id, collection: Category.ancestry_options
  %hr
  %h2 Teasers
  #teasers
    = f.simple_fields_for :teasers do |teaser|
      = render 'teaser_fields', f: teaser
    .links
      = link_to_add_association 'add teaser', f, :teasers

  .form-actions
    = f.button :submit, :class => ''
    = link_to t('.cancel', :default => t("helpers.links.cancel")), advertisor_advertisement_campaigns_path, :class => 'button secondary'
