%section.section-main-content
  - model_class = AdvertisementCampaign
  .row
    .columns.small-12
      .page-header
        %h1=t '.title', :default => model_class.model_name.human.titleize
        %hr
  .row
    .columns.small-3
      = render "_shared/side_nav"

    .columns.small-9
      %table.table.table-striped{width: "100%"}
        %thead
          %tr
            %th= model_class.human_attribute_name(:id)
            %th= model_class.human_attribute_name(:name)
            %th= model_class.human_attribute_name(:url)
            %th= model_class.human_attribute_name(:category_id)
            %th= model_class.human_attribute_name(:created_at)
            %th=t '.actions', :default => t("helpers.actions")
        %tbody
          - @advertisement_campaigns.each do |advertisement_campaign|
            %tr
              %td= link_to advertisement_campaign.id, advertisement_campaign_path(advertisement_campaign)
              %td= advertisement_campaign.name
              %td= advertisement_campaign.url
              %td= advertisement_campaign.category_id
              %td=l advertisement_campaign.created_at
              %td
                = link_to t('.edit', :default => t("helpers.links.edit")), edit_advertisement_campaign_path(advertisement_campaign), :class => 'button small'
                = link_to t('.destroy', :default => t("helpers.links.destroy")), advertisement_campaign_path(advertisement_campaign), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'button small alert'

      = link_to t('.new', :default => t("helpers.links.new")), new_advertisement_campaign_path, :class => 'button secondary'
