%section.section-main-content
  - model_class = AdvertisementCampaign
  .row
    .columns.small-12
      .page-header
        %h1=t '.title', :default => model_class.model_name.human.titleize
  .row
    .columns.small-3
      = render "_shared/side_nav"
          
    .columns.small-9
      %p
        %strong= model_class.human_attribute_name(:name) + ':'
        %br
        = @advertisement_campaign.name
      %p
        %strong= model_class.human_attribute_name(:url) + ':'
        %br
        = @advertisement_campaign.url
      %p
        %strong= model_class.human_attribute_name(:category_id) + ':'
        %br
        = @advertisement_campaign.category_id
        
      .form-actions
        = link_to t('.back', :default => t("helpers.links.back")), advertisement_campaigns_path, :class => 'button secondary'
        = link_to t('.edit', :default => t("helpers.links.edit")), edit_advertisement_campaign_path(@advertisement_campaign), :class => 'button secondary'
        = link_to t('.destroy', :default => t("helpers.links.destroy")), advertisement_campaign_path(@advertisement_campaign), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'button alert'
